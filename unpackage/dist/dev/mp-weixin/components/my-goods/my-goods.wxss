.goods-container {
  width: 175px;
  height: 220px;
  opacity: 1;
  border-radius: 10px;
  background: white;
  box-shadow: 0px 1px 4px 0px rgba(18, 38, 41, 0.25);
  position: relative;
}
.goods-container .img {
  width: 100%;
  height: 150px;
}
.goods-container .box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 5px 10px;
}
.goods-container .box .photo {
  width: 28px;
  height: 28px;
}
.goods-container .number {
  display: flex;
  flex-wrap: nowrap;
  position: absolute;
  bottom: 0;
  left: 5px;
}
.goods-container .number .rmb {
  color: #C00000;
  font-size: 20px;
  font-weight: 300;
}
.goods-container .number .price {
  color: #C00000;
  font-size: 22px;
  font-weight: 300;
}

