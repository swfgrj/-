.swiper-container {
  width: 100%;
  height: 230px;
}
.swiper-container .swiper-item {
  width: 100%;
  height: 230px;
}
.swiper-container .swiper-item .img {
  width: 100%;
  height: 100%;
}
.wx-swiper-dots {
  position: absolute;
  top: 150px;
  z-index: 998;
}
.search-container {
  position: absolute;
  top: 170px;
  left: 50%;
  -webkit-transform: translate(-50%, 0);
          transform: translate(-50%, 0);
  z-index: 998;
  width: 310px;
  height: 46px;
  border-radius: 24px;
  background: white;
  box-shadow: 0px 3px 4px 0px rgba(76, 88, 94, 0.25);
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 0 12px;
}
.goods-list {
  width: 100%;
  margin: 10px auto;
  padding: 0 5rpx;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  overflow: auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.goods-list .goods-item {
  float: left;
  margin: 14rpx auto;
}
.mask {
  width: 100%;
  height: 1500rpx;
  background-color: #000;
  opacity: 0.5;
}

