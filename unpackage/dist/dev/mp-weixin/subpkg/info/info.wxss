/* 水平间距 */
.info-container {
  display: flex;
  flex-direction: column;
  padding-top: 10px;
}
.info-container .info-item {
  width: 100%;
  height: 70px;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding-left: 8px;
  margin-bottom: 8px;
  position: relative;
}
.info-container .info-item .img {
  width: 47px;
  height: 42px;
  border-radius: 50%;
  margin-right: 12px;
}
.info-container .info-item .box {
  display: flex;
  flex-direction: column;
}
.info-container .info-item .box .name {
  font-size: 18px;
  color: black;
  margin-bottom: 5px;
}
.info-container .info-item .box .message {
  font-size: 14px;
  color: #595959;
}
.info-container .info-item .badge {
  display: flex;
  align-items: center;
  position: absolute;
  top: 20px;
  right: 20px;
}

