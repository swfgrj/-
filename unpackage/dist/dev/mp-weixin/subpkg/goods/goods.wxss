.good-item {
  width: 96%;
  height: 550px;
  margin: 0 auto;
  overflow: scroll;
  border-radius: 25px;
  opacity: 0.8;
  display: flex;
  flex-direction: column;
  background-color: #fff;
}
.good-item .swiper-container {
  width: 100%;
  height: 210px;
}
.good-item .box1 {
  width: 100%;
  height: 90px;
  border-bottom: 2px solid #efefef;
  padding: 5px;
}
.good-item .box1 .box1-son1 {
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
  align-items: center;
  padding: 0 5px;
  width: 100%;
  height: 40%;
}
.good-item .box1 .box1-son1 .price {
  width: 50%;
  height: 100%;
  color: #C00000;
  opacity: 0.9;
  font-size: 25px;
}
.good-item .box1 .box1-son1 .self-info {
  width: 50%;
  height: 100%;
  font-size: 14px;
  font-weight: 400;
  display: flex;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
}
.good-item .box1 .box1-son1 .self-info .img {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  margin-right: 10px;
}
.good-item .box1 .box1-son2 {
  margin-top: 10px;
  margin-left: 10px;
  color: black;
}
.good-item .box1 .box1-son2 .ph {
  font-size: 24px;
  font-weight: 700;
  color: black;
}
.good-item .box2 {
  width: 100%;
  height: 250px;
  display: flex;
  flex-direction: column;
  position: relative;
  padding-top: 10px;
}
.good-item .box2 .good-detail {
  width: 96%;
  height: 200px;
  font-size: 22px;
  margin: 0 auto;
  margin-bottom: 5px;
}
.good-item .box2 .good-detail .ph {
  font-size: 22px;
  font-weight: 400;
  color: black;
}
.good-item .box2 .good-detail .text {
  display: block;
  width: 100%;
  height: 80%;
  word-break: break-all;
  overflow: scroll;
  text-overflow: ellipsis;
}
.good-item .box2 .location {
  position: absolute;
  bottom: 5px;
  left: 6px;
  display: flex;
  align-items: center;
  font-size: 15px;
  color: aquamarine;
}
.bottom-box {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 56px;
  background: white;
  border-radius: 0 0 20px 20px;
  box-shadow: 0px -2px 4px 0px rgba(0, 0, 0, 0.25);
}
.bottom-box .save {
  width: 50%;
  height: 100%;
  float: left;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bottom-box .save .img {
  width: 30%;
  height: 50%;
  margin-left: 8px;
}
.bottom-box .commuication {
  width: 50%;
  height: 100%;
  float: left;
  background: #b05151;
  border-radius: 0 0 20px 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bottom-box .commuication .img {
  width: 30%;
  height: 50%;
  margin-left: 8px;
}

